<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <template id="report_invoice_situation_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <div class="row">
                    <t t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">
                        <div class="col-6">
                            <t t-set="information_block">
                                <div groups="account.group_delivery_invoice_address" name="shipping_address_block">
                                    <strong>Shipping Address:</strong>
                                    <div t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                </div>
                            </t>
                        </div>
                        <div class="col-6" name="address_not_same_as_shipping">
                            <t t-set="address">
                                <address class="mb-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <div t-if="o.partner_id.vat">
                                    <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-elif="o.partner_shipping_id and (o.partner_shipping_id == o.partner_id)">
                        <div class="offset-col-6 col-6" name="address_same_as_shipping">
                        <t t-set="address">
                            <address class="mb-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <div t-if="o.partner_id.vat">
                                <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                            </div>
                        </t>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="offset-col-6 col-6" name="no_shipping">
                        <t t-set="address">
                            <address class="mb-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <div t-if="o.partner_id.vat">
                                <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                            </div>
                        </t>
                        </div>
                    </t>
                </div>
                <div class="mt-0">
                    <div class="page">
                        <h2>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Facture</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Facture brouillon</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Facture annulé</span>
                            <span t-if="o.move_type == 'out_refund'">Avoir</span>
                            <span t-if="o.move_type == 'in_refund'">Avoir fournisseur</span>
                            <span t-if="o.move_type == 'in_invoice'">Facture fournisseur</span>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </h2>

                        <div id="informations" class="row mt-4">
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                                <t t-if="o.move_type == 'out_invoice'"><strong>Invoice Date:</strong></t>
                                <t t-elif="o.move_type == 'out_refund'"><strong>Credit Note Date:</strong></t>
                                <t t-elif="o.move_type == 'out_receipt'"><strong>Receipt Date:</strong></t>
                                <t t-else=""><strong>Date:</strong></t>
                                <span class="m-0" t-field="o.invoice_date"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                <strong>Due Date:</strong>
                                <p class="m-0" t-field="o.invoice_date_due"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                                <strong>Devis:</strong> <span class="m-0" t-field="o.invoice_origin"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.situation_id" name="origin">
                                <strong>Situation N:</strong> <span class="m-0" t-field="o.situation_id.situation_order"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.situation_id" name="origin">
                                <strong>Chantier:</strong> <span class="m-0" t-field="o.immo_inv_id"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                                <strong>Customer Code:</strong>
                                <p class="m-0" t-field="o.partner_id.ref"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                                <strong>Reference:</strong>
                                <p class="m-0" t-field="o.ref"/>
                            </div>
                        </div>

                        <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                        <t t-if="o.immo_inv_id" t-set="display_discount" t-value="any(l.sale_order_line_id and l.sale_order_line_id.discount for l in o.immo_inv_id.line_ids)"/>

                        <table class="table_situation_invoice table-sm o_main_table table-bordered o_main_table" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th name="th_description" class="text-start"><span>Désignation</span></th>
                                    <th name="th_unit" class="text-end"><span>U</span></th>
                                    <!-- <th name="th_quantity" class="text-end"><span>Quantity</span></th> -->
                                    <th name="th_priceunit" t-if="o.immo_inv_id and not o.immo_inv_id.avancement_montant" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>MONTANT HT</span></th>
                                    <th name="th_price_unit" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                    </th>
                                    <th name="th_taxes" t-if="o.immo_inv_id and not o.immo_inv_id.avancement_montant" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>AVANCEMENT</span></th>
                                    <th name="th_subtotal" class="text-end">MONTANT CUMULE</th>
                                    <th name="th_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>MONTANT CUMULE M - 1</span></th>
                                    <th name="th_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>MONTANT A PAYER</span></th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody invoice_situation_blue_color">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="o.immo_inv_id.line_ids.sorted(key=lambda l: l.sequence)" t-as="line">
                                    <!-- <t t-set="line" t-foreach="lines.filtered(lambda x: x.product_id.id == immo_line.product_id.id)" /> -->
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product' or not line.display_type" name="account_invoice_line_accountable">

                                            <t t-set="infos_avancements" t-value="o.situation_id.get_info_avancement_amount_by_product(line.id)"/>
                                            <t t-set="situation_before" t-value="infos_avancements and infos_avancements[0] or 0"/>
                                            <t t-set="situation_current" t-value="infos_avancements and infos_avancements[1] or 0"/>
                                            <t t-set="situation_final" t-value="infos_avancements and infos_avancements[2] or 0"/>


                                            <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                            <td class="text-end">
                                                <span t-field="line.product_uom_id"/>
                                            </td>
                                            <!-- <td class="text-end">
                                                <span t-field="line.quantity"/>
                                            </td> -->
                                            <td t-if="o.immo_inv_id and not o.immo_inv_id.avancement_montant" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-if="line.sale_order_line_id" class="text-nowrap" t-field="line.sale_order_line_id.discount"/>
                                            </td>
                                            <td t-if="o.immo_inv_id and not o.immo_inv_id.avancement_montant" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="d-none " t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                                <span t-esc="o.situation_id.get_avancement_by_product(line.id)"/> %
                                            </td>
                                            <td class="text-end">
                                                <!-- <span t-esc="o.situation_id.get_avancement_amount_by_product(line.product_id.id)" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> -->
                                                <!-- <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/> -->
                                                <!-- <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/> -->
                                            </td>
                                            <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="situation_before" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                            </td>
                                            <td t-attf-class="text-end {{ 'd-none d-md-table-cell o_price_total' if report_type == 'html' else 'o_price_total' }}">
                                                <span t-esc="situation_current" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <!-- <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t> -->
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix mb-4 mt-4">
                            <div class="row no_margin_side">

                                <div class="col-6 p-0">
                                    <div class="fieldset w-100 flex_table d-none">
                                        <h3><span>Marché (<span style="top:0;" t-field="o.currency_id.name"/>)</span></h3>
                                        <t t-set="sit_id" t-if="o.situation_id" t-value="o.situation_id.id"/>
                                        <t t-set="sit_id" t-if="not o.situation_id" t-value="None"/>
                                        <t t-set="immo_invoice_data" t-value="o.immo_inv_id.get_invoice_report_data(situation=sit_id)"/>
                                        <div class="flex_row h_1rem">
                                            <div class="flex_cell p-2 w-75">Montant du marche HT</div>
                                            <div class="flex_cell p-2 text-at-right"><span t-esc="immo_invoice_data[0]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                        </div>
                                        <div class="flex_row h_1rem">
                                            <div class="flex_cell p-2 w-75">TVA</div>
                                            <div class="flex_cell p-2 text-at-right"><span t-esc="immo_invoice_data[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                        </div>
                                        <div class="flex_row h_1rem">
                                            <div class="flex_cell p-2 w-75">Montant TTC</div>
                                            <div class="flex_cell p-2 text-at-right"><span t-esc="immo_invoice_data[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                        </div>
                                        <!-- <div class="flex_row h_1rem">
                                            <div class="flex_cell p-2 w-75">Restant a depenser</div>
                                            <div class="flex_cell p-2 text-at-right"><span t-esc="immo_invoice_data[3]" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
                                        </div> -->
                                    </div>
                                    <div class="fieldset w-100 mt-4" t-if="o.immo_inv_id">
                                        <h3 t-if="o.immo_inv_id"><span>Avancement (<span style="top:0;" t-field="o.currency_id.name"/>)</span></h3>
                                        <div t-if="o.immo_inv_id" class="flex_table">
                                            <t t-set="avancement_list" t-value="o.situation_id.get_situation_to_current()"/>
                                            <t t-if="o.simple_avancement and len(avancement_list) &gt; 5">
                                                <t t-set="part_2_size" t-value="1"/>
                                                <t t-set="part_2_size" t-if="o.immo_inv_id and o.immo_inv_id.pre_payment_ids" t-value="part_2_size+1"/>
                                                <t t-set="part_1_size" t-value="5-part_2_size"/>
                                                <t t-set="part1" t-value="avancement_list[:part_1_size]"/>
                                                <t t-set="part2" t-value="avancement_list[-part_2_size:]"/>
                                                <div class="flex_row" t-foreach="part1" t-as="inv_situation" style="vertical-align: bottom;">
                                                    <div class="flex_cell p-2 w-75">
                                                        <span t-esc="inv_situation[3]"/>
                                                        <span> au </span>
                                                        <span t-esc="inv_situation[0]" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                                        <span t-if="inv_situation[1] != 0"> ( </span>
                                                        <span t-if="inv_situation[1] != 0" t-esc="inv_situation[1]"/>
                                                        <span t-if="inv_situation[1] != 0"> %) </span>
                                                    </div>
                                                    <div class="flex_cell p-2 text-at-right"><span t-esc="inv_situation[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                                </div>
                                                <div class="flex_row" style="vertical-align: bottom;">
                                                    <div class="flex_cell p-2 w-75">---</div>
                                                    <div class="flex_cell p-2 text-at-right">---</div>
                                                </div>
                                                <div class="flex_row" t-foreach="part2" t-as="inv_situation" style="vertical-align: bottom;">
                                                    <div class="flex_cell p-2 w-75">
                                                        <span t-esc="inv_situation[3]"/>
                                                        <span> au </span>
                                                        <span t-esc="inv_situation[0]" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                                        <span t-if="inv_situation[1] != 0"> ( </span>
                                                        <span t-if="inv_situation[1] != 0" t-esc="inv_situation[1]"/>
                                                        <span t-if="inv_situation[1] != 0"> %) </span>
                                                    </div>
                                                    <div class="flex_cell p-2 text-at-right"><span t-esc="inv_situation[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div class="flex_row" t-foreach="avancement_list" t-as="inv_situation" style="vertical-align: bottom;">
                                                    <div class="flex_cell p-2 w-75">
                                                        <span t-esc="inv_situation[3]"/>
                                                        <span> au </span>
                                                        <span t-esc="inv_situation[0]" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                                        <span t-if="inv_situation[1] != 0"> ( </span>
                                                        <span t-if="inv_situation[1] != 0" t-esc="inv_situation[1]"/>
                                                        <span t-if="inv_situation[1] != 0"> %) </span>
                                                    </div>
                                                    <div class="flex_cell p-2 text-at-right"><span t-esc="inv_situation[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></div>
                                                </div>
                                            </t>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6" style="padding-left: 1.5rem">
                                    <div class="fieldset w-100">
                                        <h3><span>Facture (<span style="top:0;" t-field="o.currency_id.name"/>)</span></h3>
                                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-call="immo_bill.document_tax_totals"/>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication" class="mt-4">
                        Please use the following communication for your payment : <b><span t-field="o.payment_reference"/></b>
                    </p>


                    <!--<p><img class="w-50 " t-if="o.company_id.rib_image" t-att-src="image_data_uri(o.company_id.rib_image)" style="" alt="rib"/></p>-->
                    <t t-set="accounts_bank" t-value="o.company_id.bank_ids"/>
                    <t t-set="bank" t-if="accounts_bank" t-value="accounts_bank[0]"/>
                    <t t-set="bank" t-if="not accounts_bank" t-value="None"/>
                    <table class="w-75 table-bordered" style="border: solid red 1px;" t-if="o.move_type not in ['out_refund', 'in_invoice']">
                      <tr>
                        <td class="p-1" style="background-color: lightgray">EN VOTRE AIMABLE REGLEMENT PAR VIREMENT SUR LE COMPTE:</td>
                      </tr>
                      <tr>
                        <td class="p-1">
                          BANQUE: <strong><span t-if="bank" t-field="bank.bank_id"/></strong><br/>
                          IBAN: <strong><span t-if="bank" t-field="bank.acc_number"/></strong><br/>
                          SWIFT BIC: <strong><span t-if="bank and bank.bank_id" t-field="bank.bank_id.bic"/></strong><br/>
                        </td>
                      </tr>
                    </table>
                    <br/>
                    <t t-set="payment_term_details" t-value="o.payment_term_details"/>
                    <div t-field="o.invoice_payment_term_id.note" name="payment_term"/>
                    <t t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details">
                        <div t-if="o.show_payment_term_details" id="total_payment_term_details_table" class="row">
                            <div t-attf-class="#{'col-7' if report_type != 'html' else 'col-sm-7 col-md-6'} mt-2 mb-2">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <th class="border-black text-start">
                                        Due Date
                                    </th>
                                    <th class="border-black text-end">
                                        Amount Due
                                    </th>
                                    <th t-if="o.show_discount_details" class="border-black text-end">
                                        Discount
                                    </th>
                                    <t t-foreach="payment_term_details" t-as="term">
                                        <tr>
                                            <td t-esc="term.get('date')" class="text-start"/>
                                            <td t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" t-esc="term.get('amount')" class="text-end"/>
                                            <td t-if="term.get('discount_date')" class="text-end">
                                                <span t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" t-esc="term.get('discount_amount_currency')"/> if paid before
                                                <span t-esc="term.get('discount_date')"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </t>
                    <div t-if="not is_html_empty(o.narration)" name="comment">
                        <span t-field="o.narration"/>
                    </div>
                    <p t-if="not is_html_empty(o.fiscal_position_id.note)" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <p t-if="o.invoice_incoterm_id" name="incoterm">
                        <strong>Incoterm: </strong><span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>
                    </p>
                    <div id="qrcode" t-if="o.display_qr_code and o.amount_residual &gt; 0">
                        <t t-set="qr_code_url" t-value="o._generate_qr_code()"/>
                        <p t-if="qr_code_url">
                            <strong class="text-center">Scan me with your banking app.</strong><br/><br/>
                            <img class="border border-dark rounded" t-att-src="qr_code_url"/>
                        </p>
                    </div>
                </div>
            </t>
        </template>

        <template id="document_tax_totals">
            <!--
                Generic template to display tax totals in pdf reports.
                Used by invoices, SO and PO.

                ARGUMENTS:
                - tax_totals: dict in the form generated by account.move's _get_tax_totals.
            -->

            <t t-set="prepayments" t-value="o.situation_id.pre_payments_ids" />
            <t t-set="amount_ht" t-value="o.amount_untaxed" />
            <t t-set="amount_ttc" t-value="o.amount_total" />
            <t t-set="total" t-value="o.amount_total" />
            <t t-set="down_payment_ht" t-value="0" />
            <t t-set="down_payment" t-value="0" />
            <t t-set="rg_amount_untaxed_total" t-value="0" />
            <t t-set="rg_amount_total" t-value="0" />
            <t t-if="o.situation_id" t-set="down_payment_ht" t-value="o.situation_id.amount_down_payment_novat" />
            <t t-if="o.situation_id" t-set="down_payment" t-value="o.situation_id.amount_down_payment" />
            <t t-if="o.situation_id" t-set="rg_amount_untaxed_total" t-value="o.situation_id.rg_amount_untaxed_total" />
            <t t-if="o.situation_id" t-set="rg_amount_total" t-value="o.situation_id.rg_amount_total" />
            <t t-set="amount_ht" t-value="amount_ht" />
            <t t-set="amount_ttc" t-value="amount_ttc" />

            <div class="flex_row" t-if="o.situation_id and o.situation_id.amount_down_payment != 0">
                <div class="flex_cell p-2 w-75 font-weight-bold">Acomptes</div>
                <div class="flex_cell p-2 text-at-right font-weight-bold"><span t-esc="-down_payment_ht" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
            </div>
            <t t-if="o.immo_inv_id.rg_sale_mode == 'ht'">
                <div class="flex_row" t-if="o.situation_id and o.situation_id.rg_amount_untaxed_total &gt; 0">
                    <div class="flex_cell p-2 w-75 font-weight-bold">Retenue de Garantie</div>
                    <div class="flex_cell p-2 text-at-right font-weight-bold"><span t-esc="rg_amount_untaxed_total * -1" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
                </div>
                <div class="flex_row">
                    <div class="flex_cell p-2 w-75">Total HT</div>
                    <div class="flex_cell p-2 text-at-right"><span t-esc="amount_ht" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
                </div>
            </t>
            <t t-else="">
                <div class="flex_row">
                    <div class="flex_cell p-2 w-75">Total HT</div>
                    <div class="flex_cell p-2 text-at-right"><span t-esc="amount_ht + rg_amount_untaxed_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
                </div>
                <div class="flex_row" t-if="o.situation_id and o.situation_id.rg_amount_total &gt; 0">
                    <div class="flex_cell p-2 w-75 font-weight-bold">Retenue de Garantie</div>
                    <div class="flex_cell p-2 text-at-right font-weight-bold"><span t-esc="rg_amount_total * -1" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
                </div>
            </t>
            <div class="flex_row">
                <div class="flex_cell p-2 w-75 font-weight-bold">Total TTC</div>
                <div class="flex_cell p-2 text-at-right font-weight-bold"><span t-esc="amount_ttc" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></div>
            </div>
            <div class="flex_row">
                <div class="flex_cell p-2 w-75"><h5 align="left">Net a payer</h5></div>
                <div class="flex_cell p-2 text-at-right"><h2><span t-esc="total" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></h2></div>
            </div>


            <t t-set="taxes" t-value="list(tax_totals['groups_by_subtotal'].items())" />
            <div class="w-100" style="padding: 0rem 1rem;" t-if="taxes" >
                <table class="table table-bordered">
                    <tr>
                        <th>% TVA</th>
                        <th>Base</th>
                        <th>Total TVA</th>
                    </tr>
                    <t t-foreach="taxes[0][1]" t-as="amount_by_group">
                        <tr>
                            <td>
                                <span t-esc="amount_by_group['tax_group_name']"/>
                            </td>
                            <td class="text-end">
                                <t t-set="base_amount" t-value="amount_by_group['tax_group_base_amount']" />
                                <span class="text-nowrap"><t t-esc="base_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></span>
                            </td>
                            <td class="text-end o_price_total">
                                <t t-set="total_tax" t-value="amount_by_group['tax_group_amount']" />
                                <span class="text-nowrap" t-esc="total_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>


        </template>

        <template id="tax_groups_totals">
            <!--
                Generic template to display a list of tax groups with the related amounts.

                ARGUMENTS:
                - tax_totals: dict in the form generated by account.move's _get_tax_totals.
                - subtotal_to_show: The subtotal we need to render the groups from
            -->
            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                <tr>
                    <t t-if="tax_totals['display_tax_base']">
                        <td>
                            <span t-esc="amount_by_group['tax_group_name']"/>
                            <span class="text-nowrap"> on
                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                            </span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                    <t t-else="">
                        <td><span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                        </td>
                    </t>
                </tr>
            </t>
        </template>

        <template id="report_invoice_situation">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="immo_bill.report_invoice_situation_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <record id="situation_invoice_report_action" model="ir.actions.report">
            <field name="name">Situation invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">immo_bill.report_invoice_situation</field>
            <field name="report_file">immo_bill.report_invoice_situation</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>

    </data>

</odoo>