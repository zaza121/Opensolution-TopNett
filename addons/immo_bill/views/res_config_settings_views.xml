<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_immo" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.immo</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']" position="inside">
                <div class="row mt16">
                    <div class="col-12 col-lg-6 o_setting_box" id="rg_retenue_gestion_configuration">
                        <div class="o_setting_left_pane">
                            <field name="rg_enable"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rg_enable"/>
                            <div class="text-muted">
                                Activer la retenue de gestion dans les devis de vente
                            </div>
                            <div class="content-group" attrs="{'invisible': [('rg_enable','=',False)]}">
                                <div class="mt16">
                                    <span class="col-lg-3">Mode Retenue: <field name="rg_sale_mode" attrs="{'required':[('rg_enable','=',True)]}" /> </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>