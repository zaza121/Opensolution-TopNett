<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_payslip_input_type_view_form_opsol" model="ir.ui.view">
        <field name="name">hr.payslip.input.type.form.opsol</field>
        <field name="model">hr.payslip.input.type</field>
        <field name="priority">25</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_input_type_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='code']" position="after">
                <field name="amount" />
            </xpath>

        </field>
    </record>

    <record id="hr_payslip_input_type_view_tree_opsol" model="ir.ui.view">
        <field name="name">hr.payslip.input.type.tree.opsol</field>
        <field name="model">hr.payslip.input.type</field>
        <field name="priority">25</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_input_type_view_tree" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='code']" position="after">
                <field name="amount" />
            </xpath>

        </field>
    </record>

</odoo>