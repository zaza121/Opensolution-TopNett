<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="contact_opsol" inherit_id="base.contact_name" priority="20">
        <xpath expr="//span[@itemprop='name']/.." position="replace">
            <t t-if="object.name">
               <h4><b><span style="color:#495057;" itemprop="name" t-esc="name"/></b></h4>
            </t>
        </xpath>
    </template>

</odoo>